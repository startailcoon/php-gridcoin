{
    "name": "coon-design/php-gridcoin",
    "description": "RPC caller written in php for Gridcoin Research",
    "license": "MIT",
    "autoload": {
        "psr-4": {"phpGridcoin\\": "src/"}
    },
    "authors": [
        {
            "name": "Startail the 'Coon",
            "email": "startail@coondesign.eu",
            "homepage": "http://github.com/startailcoon/php-gridcoin",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/startailcoon/php-gridcoin/issues"
    },
    "require": {
        "netresearch/jsonmapper": "^4.2.0",
        "curl/curl": "^2.5",
        "php": ">=8",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-curl": "*",
        "ext-xml": "*",
        "ext-bcmath": "*",
        "slim/slim":"4.*",
        "slim/psr7": "^1.6",
        "coon-design/rate-limit": "^0.3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~7.5 || ~8.0 || ~9.0 || ~10.0",
        "squizlabs/php_codesniffer": "~3.5",
        "phpmd/phpmd": "^2.13"
    }
}
